@model IEnumerable<TodoCore.Models.TodoList>

@if(Model.Count() > 0){    
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Tarefas <span class="caret"></span></a>
        <ul class="dropdown-menu">
            @foreach (var item in Model)
            {
                <li><a asp-controller="Todo" asp-action="Index" asp-route-id="@item.Id">@item.Title (@item.Todos.Count())</a></li>
            }
        </ul>
    </li>
}